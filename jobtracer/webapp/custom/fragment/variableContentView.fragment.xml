<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:codeeditor="sap.ui.codeeditor"
>
    <l:VerticalLayout
        width="100%"
        id='layout_code_editor0'
        core:require="{handler: 'octav/demo/jobtracer/custom/fragment/variableContentView'}"
        class="sapUiContentPadding"
    >
        <codeeditor:CodeEditor
            id="myCodeEditor0"
            width="100%"
            height="30em"
            type="json"
            value="{path: 'VariableContent', formatter: 'handler.SetCodeEditorData', mode:'sap.ui.model.BindingMode.OneWay'}"
            editable="false"
        />
    </l:VerticalLayout>
</core:FragmentDefinition>
